  "version": "0.2.0",
  "configurations": [

    {
      "type": "node",
      "request": "launch",
      "name": "dev_server.js",
      "program": "${workspaceFolder}/tools/dev_server.js",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "test:server",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "cwd": "${workspaceFolder}",
      "args": [
        "./tests/server/**/*-test.js", "--timeout=120000", "--watch"
      ]
    }
  ]
}